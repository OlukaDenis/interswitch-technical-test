<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="PrimaryBtnStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:insetBottom">@dimen/spacing_0</item>
        <item name="android:insetTop">@dimen/spacing_0</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="cornerRadius">@dimen/spacing_8</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_8</item>
        <item name="android:color">?android:attr/textColorPrimary</item>
        <item name="backgroundColor">?attr/colorSurface</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="DefaultEditTextStyle">
        <item name="android:textColorHint">@color/gray_text</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="hintTextColor">@color/gray_text</item>
        <item name="background">@drawable/et_border_item_bg</item>
        <item name="android:background">@drawable/et_border_item_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>
</resources>